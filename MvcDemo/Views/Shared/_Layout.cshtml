<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcDemo</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
	@RenderSection("Head", required: false)
</head>
<body>		
	@* Nav Bar *@
	<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
		<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<a class="navbar-brand" href="~/">
			<img src="~/images/logo.png" width="50" height="50" alt="logo">
		</a>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item" is-active-route asp-controller="Home" asp-action="Index">
					<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
				</li>
				<li class="nav-item" is-active-route asp-controller="Home" asp-action="About">
					<a class="nav-link" asp-controller="Home" asp-action="About">About</a>
				</li>
				<li class="nav-item" is-active-route asp-controller="Contact" asp-action="Index">
					<a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a>
				</li>
			</ul>
		</div>
	</nav>

	@* Banner *@
	<div class="banner d-flex justify-content-around">
		<a href="#" title="HTML 5" class="hidden-md-down">
			<img class="logos" src="~/images/HTML5_Logo.png" alt="" />
		</a>
		<a href="#" title="CSS 3" class="hidden-md-down">
			<img class="logos" src="~/images/css3_logo.png" alt="" />
		</a>
		<a href="#" title="JavaScript" class="hidden-md-down">
			<img class="logos" src="~/images/javascript_logo.png" alt="" />
		</a>
		<a href="#" title="Jquery">
			<img class="logos" src="~/images/Jquery_logo.png" alt="" />
		</a>
		<a href="#" title="Boostrap">
			<img class="logos" src="~/images/bootstrap_logo.png" alt="" />
		</a>
		<a href="#" title="Visual Studio">
			<img class="logos" src="~/images/VisualStudio_logo.png" alt="" />
		</a>
		<a href="#" title="SQL" class="hidden-md-down">
			<img class="logos" src="~/images/SQL_logo.png" alt="" />
		</a>
		<a href="#" title="Knockout" class="hidden-md-down">
			<img class="logos" src="~/images/knockout_logo.png" alt="" />
		</a>
		<a href="#" title="GitHub">
			<img class="logos" src="~/images/github_logo.png" alt="" />
		</a>
		<a href="#" title="Postman">
			<img class="logos" src="~/images/Postman_logo.png" alt="" />
		</a>
	</div>

	@* Body *@
	<div class="container body-content">
		<div id="errorMessage" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
			<strong>Error:</strong> We are investigating this issue.
		</div>

		@RenderBody()
	</div>

	@* Footer *@
	<footer class="footer">
		<span class="text-muted mx-3">2017</span>
	</footer>

	@* Scripts *@
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/knockout/dist/knockout.js"></script>
	<script src="~/lib/tether/dist/js/tether.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/lib/moment/min/moment.min.js"></script>
	<script src="~/lib/moment/locale/en-gb.js"></script> 
	<script src="~/js/site.js" asp-append-version="true"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>
