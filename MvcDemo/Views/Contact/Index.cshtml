@model MvcDemo.ViewModels.ContactViewModel

@{
	ViewData["Title"] = "Contact";
}

@section Head {
	<script src='https://www.google.com/recaptcha/api.js'></script>
}


@if (Model.Success)
{
	<div id="successMessage" class="alert alert-success alert-dismissible fade show" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<strong>Thanks!</strong> We'll contact you as soon as possible.
	</div>
}

<div class="row">
	<div class="col-12">
		<form asp-action="Index" asp-controller="Contact" type="post" class="contact-form">
			<fieldset>
				<div class="form-group required mt-2">
					<label for="txtFullName">Full Name</label>
					<div class="form-inline">
						<select class="form-control mb-2 mr-sm-2 mb-sm-0" asp-for="Title">
							<option>Sr</option>
							<option>Miss</option>
						</select>
						<input type="text" asp-for="FullName" class="form-control mb-2 mr-sm-2 mb-sm-0" id="txtFullName" placeholder="Name" />
					</div>
					<div class="form-control-feedback" data-valmsg-for="FullName" data-valmsg-replace="true"></div>
				</div>
				<div class="form-group">
					<label for="txtCompany">Company</label>
					<input type="text" asp-for="Company" class="form-control" id="txtCompany" />
				</div>
				<div class="form-group required">
					<label for="txtEmail">Email Address</label>
					<input type="text" asp-for="Email" class="form-control" id="txtEmail" placeholder="Email@example.com" />
					<div class="form-control-feedback" data-valmsg-for="Email" data-valmsg-replace="true"></div>
				</div>
				<div class="form-group">
					<label for="txtTelephone">Phone Number</label>
					<input type="text" asp-for="Phone" class="form-control" id="txtTelephone" />
					<div class="form-control-feedback" data-valmsg-for="Phone" data-valmsg-replace="true"></div>
				</div>
				<div class="form-group required">
					<label for="txtMessage">Message</label>
					<textarea class="form-control" asp-for="Message" id="txtMessage" rows="5"></textarea>
					<div class="form-control-feedback" data-valmsg-for="Message" data-valmsg-replace="true"></div>
				</div>
				<div class="form-group">
					<div class="g-recaptcha" data-sitekey="6LcZJjAUAAAAAIKI1FtbHqpzg-4Ql5Sn9Q97HUDl"></div>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</fieldset>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
