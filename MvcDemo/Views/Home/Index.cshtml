@model MvcDemo.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="row">
	<div class="col-sm-12 col-md-6 mt-2 mb-2">
		@await Html.PartialAsync("_StackOverflowQuestionsWidget")
	</div>
	<div class="col-sm-12 col-md-6 mt-2 mb-2">
		@await Html.PartialAsync("_StackOverflowUsersWidget")
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-6 mt-2 mb-2">
		@await Html.PartialAsync("_GitHubRepositoriesWidget")
	</div>
	<div class="col-sm-12 col-md-6 mt-2 mb-2">
		@await Html.PartialAsync("_CountriesFilterWidget")
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		var stackOverflowApi = '@Model.Settings.StackOverflowApi';
