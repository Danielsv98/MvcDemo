<div class="widget card" id="gh_repos">
	<div class="card-header">
		GitHub Repositories
		<a class="widget-icon" href="#" data-toggle="modal" data-target="#gh-repos-modal">
			<img src="~/images/settings.png" alt="settings">
		</a>
	</div>
	<div class="card-block" style="overflow-y: auto;">
		<img data-bind="visible: loading" class="loading" src="~/images/loading.gif" alt="Loading" />
		<div data-bind="visible: !loading(), template: { name: 'gh-repos-template' }"></div>
	</div>
</div>

@* Settings Modal *@
<div class="modal fade" id="gh-repos-modal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Settings</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form>
					<div class="form-group">
						<label for="reposName">User Repository</label>
						<input type="text" class="form-control" id="reposName" />
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
			</div>
		</div>
	</div>
</div>

@* Template *@
<script type="text/html" id="gh-repos-template">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Owner</th>
				<th>Last Updated</th>
			</tr>
		</thead>
		<tbody data-bind="foreach: items">
			<tr>
				<td class="ellipse">
					<a data-bind="text: name, attr: { href: html_url }" target="_blank"></a>
				</td>
				<td data-bind="text: owner.login"></td>
				<td data-bind="text: moment(updated_at).format('L')"></td>
			</tr>
		</tbody>
	</table>
</script>